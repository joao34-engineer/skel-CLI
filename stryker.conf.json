{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "vitest",
  "checkers": ["typescript"],
  "mutate": [
    "primitives/security/hasher/v1.0.0/index.ts",
    "src/core/frameworks/detector.ts",
    "src/core/frameworks/adapter-generator.ts"
  ],
  "thresholds": {
    "high": 85,
    "low": 70,
    "break": 70
  },
  "coverageAnalysis": "perTest",
  "timeoutMS": 180000,
  "maxConcurrentTestRunners": 1,
  "ignoreStatic": true
}
